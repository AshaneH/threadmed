{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "outDir": "./out",
        "rootDir": ".",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "target": "ES2020",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/renderer/src/*"
            ]
        }
    },
    "include": [
        "src/renderer/src/**/*.ts",
        "src/renderer/src/**/*.tsx",
        "src/renderer/src/**/*.d.ts",
        "src/renderer/*.d.ts",
        "src/preload/index.d.ts"
    ]
}