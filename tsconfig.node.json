{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "./out",
        "rootDir": ".",
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "electron.vite.config.ts",
        "src/main/**/*.ts",
        "src/preload/**/*.ts",
        "src/preload/**/*.d.ts"
    ]
}